  "bugs": {
    "url": "https://github.com/planetary-social/webapp/issues"
  },
  "homepage": "https://github.com/planetary-social/webapp#readme",
  "devDependencies": {
    "browserify": "^17.0.0",
    "envify": "^4.1.0",
    "esmify": "^2.1.1",
    "netlify-cli": "^6.14.19",
    "sass": "^1.43.4",
    "uglifyify": "^5.0.2"
  }
}
